<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="dividerColor" format="color"/>

    <declare-styleable name="NikeToolBar">
        <attr name="nt_toolBarTitle" format="string"/>
    </declare-styleable>


    <style name="Theme.One.Auth.EditTextStyle" parent="Theme.One.Auth">
        <item name="android:minHeight">50dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:background">@drawable/background_et_auth</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColorHint">#48ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?colorOnBackground</item>
    </style>

    <style name="Theme.One.Auth.MaterialBtnStyle" parent="Theme.One.Auth">
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?colorOnSurface</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAppearance">?textAppearanceHeadline6</item>
    </style>

</resources>